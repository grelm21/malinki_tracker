<%= form_with model: [deposit] do |form| %>
  <div class='new-edit-wrapper'>
    <div>
      <%= form.text_field :amount, class: 'text-field', placeholder: 'сумма' %>
    </div>
    <div>
      <%= form.date_field :issued_at, value: Date.today, class: 'text-field'%>
    </div>
    <%= form.hidden_field :classrooms_student_id, value: classrooms_student.id %>
    <% if action_name.eql? :new %>
      <%= form.submit 'добавить абонемент', class: "submit-button" %>
    <% end %>
    <% if action_name.eql? :edit %>
      <%= form.submit 'обновить абонемент', class: "submit-button" %>
    <% end %>
  </div>
<% end %>
