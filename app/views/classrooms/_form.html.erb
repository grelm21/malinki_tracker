<%= form_with(model: [student, classroom], html: { autocomplete: 'off' }, class: 'flex flex-col md:grid md:grid-cols-2 px-5 py-2 gap-x-5 gap-y-2') do |form| %>
  <div class="flex flex-col md:col-span-2 items-start gap-x-2">
    <%= form.label :name, 'название:', class: 'label' %>
    <%= form.text_field :name, class: 'text-field' %>
  </div>
  <div class="flex flex-col items-start gap-x-2">
    <%= form.label :wage, 'стоимость урока (руб.)', class: 'label' %>
    <%= form.text_field :wage, class: 'text-field', placeholder: 'стоимость урока' %>
  </div>
  <div class="flex flex-col items-start gap-x-2">
    <%= form.label :length, 'длительность урока (мин.)', class: 'label' %>
    <%= form.number_field :length, min: 0, step: 5, class: 'text-field', placeholder: 'длительность урока' %>
  </div>
  <div class='flex flex-col col-span-2 gap-y-2'>
    <div class="label">Расписание</div>
      <%= form.collection_check_boxes :schedule, schedule_num_days, :to_i, :to_i, { include_hidden: false }, { class: ''} do |chb| %>
        <div class='flex flex-row gap-2 justify-start items-center'>
          <%= chb.check_box class: 'checkbox', checked: chb.object.to_s.in?(classroom.schedule) %>
          <div><%= t('date.day_names')[chb.object.to_i] %></div>
        </div>
      <% end %>
  </div>
  <%= form.submit 'сохранить', class: 'submit-button' %>
  <button type="button" data-modal-hide="classroom-edit-<%= classroom.id %>" class="cancel-button">отмена</button>
<% end %>
